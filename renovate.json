{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor"
      ]
    }
  ],
  "lockFileMaintenance": {
   "enabled": true,
   "schedule":["after 11am on sunday"]
 }
}
